    },
    "transitions": {
      "fade": "opacity 400ms cubic-bezier(0.4, 0.0, 0.2, 1)",
      "slide": "transform 400ms cubic-bezier(0.4, 0.0, 0.2, 1)",
      "scale": "transform 250ms cubic-bezier(0.4, 0.0, 0.2, 1)"
    },

    "_animation_principles": [
      "Prefer smooth fades over abrupt changes",
      "Use subtle scale transforms (1.0 to 1.05) for interactive elements",
      "Slide-in animations should be gentle (20-30px movement)",
      "Avoid bounces or elastic effects unless for playful moments",
      "Loading states use gentle pulse or fade animations"
    ]
  },

  "values": {
    "playful_serious": 4,
    "modern_traditional": 2,
    "bold_subtle": 3,
    "warm_cool": 3,
